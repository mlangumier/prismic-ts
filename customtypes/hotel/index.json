{
  "id": "hotel",
  "label": "Hotel",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "name": {
        "type": "Text",
        "config": { "label": "Name", "placeholder": "The name of the hotel" }
      },
      "city": {
        "type": "Link",
        "config": {
          "label": "City",
          "select": "document",
          "customtypes": ["city"]
        }
      },
      "thematics": {
        "type": "Group",
        "config": {
          "label": "Thematics",
          "fields": {
            "thematic": {
              "type": "Link",
              "config": {
                "label": "Thematic",
                "select": "document",
                "customtypes": ["thematic"]
              }
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "StructuredText"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
